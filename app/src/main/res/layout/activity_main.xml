<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:layout_above="@id/output_tv"/>

    <TextView
        android:id="@+id/output_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="80sp"
        android:gravity="right"
        android:paddingRight="10dp"
        android:layout_above="@id/buttons_layout"/>


    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_ac"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_ac"

               />

            <ImageView
                android:id="@+id/btn_divide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_divide"
                android:layout_marginLeft="25dp"
                />

            <ImageView
                android:id="@+id/btn_start_bracket"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_start_bracket"
                android:layout_marginLeft="25dp"
                />

            <ImageView
                android:id="@+id/btn_end_bracket"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_end_bracket"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_7"

                />

            <ImageView
                android:id="@+id/btn_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_8"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_9"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_multiplication"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_multiplication"
                android:paddingLeft="25dp"
                android:layout_marginStart="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_4"
                />

            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_5"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_6"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_minus"
                android:paddingLeft="25dp"
                android:layout_marginStart="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1"
                />

            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_2"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_3"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_plus"
                android:paddingLeft="25dp"
                android:layout_marginStart="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="invisible"
                android:background="@drawable/btn_0"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_0"
                />

            <ImageView
                android:id="@+id/btn_dot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_dot"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:id="@+id/btn_equal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_equal"
                android:paddingLeft="25dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>